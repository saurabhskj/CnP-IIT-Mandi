<!DOCTYPE html>
<html>
<head>
  <title>CnpWeb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<script type="text/javascript">
    WebFontConfig = {
        google: { families: [ 'Allura::latin', 'Gilda Display', 'Gabriela', 'Esteban', 'Droid Serif','Fanwood Text' ] }
    };
    (function() {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
                '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
    })(); </script>

<div class="navbar">
  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <!-- <a class="brand" href="#">Title</a> -->

      <ul class="nav">

        <li><a href="/">Home</a></li>
        <li class="divider-vertical"></li>
        <li><a href=<%= forums_path %>>Forums</a></li>
        <li class="divider-vertical"></li>
        <li><a href=<%= companies_path %>>Companies</a></li>
        <li class="divider-vertical"></li>
        <li><a href=<%= resume_path %>>Resume</a></li>
        <li class="divider-vertical"></li>
      </ul>
      <ul class="nav pull-right">
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_student.first_name %>
            <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <li><a href="<%= my_profile_path %>">My Profile</a></li>
            <li><a href="<%= edit_student_registration_path %>">Change Password</a></li>
            <li><a href="<%= destroy_student_session_path %>">Sign Out</a></li>
          </ul>

        </li>
      </ul>
    </div>
  </div>
</div>

<%= yield %>

</body>
</html>
